<Window x:Class="System_do_zarzadzania_obslugi_sprzedazy.ListOfSellers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:System_do_zarzadzania_obslugi_sprzedazy"
        mc:Ignorable="d"
        Title="ListOfSellers" Height="450" Width="800">
    <Grid>
        <ListView x:Name="SellersListView" HorizontalAlignment="Left" Height="399" Margin="188,10,0,0" VerticalAlignment="Top" Width="594">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="50" Header="ID" DisplayMemberBinding="{Binding IdSeller}" />
                    <GridViewColumn Width="50" Header="Imię" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Width="100" Header="Nazwisko" DisplayMemberBinding="{Binding Surname}" />
                    <GridViewColumn Width="70" Header="Miasto" DisplayMemberBinding="{Binding City}" />
                    <GridViewColumn Width="70" Header="Ulica" DisplayMemberBinding="{Binding Street}" />
                    <GridViewColumn Width="70" Header="Numer telefonu" DisplayMemberBinding="{Binding NumberPhone}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
